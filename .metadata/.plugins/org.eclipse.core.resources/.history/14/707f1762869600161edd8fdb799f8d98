package jdbc_slutprojekt.view;

import java.awt.BorderLayout;
import java.awt.Component;
import java.awt.Container;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.SQLException;

import javax.swing.*;

import jdbc_slutprojekt.controll.Engine;

public class MenuView extends View implements ActionListener {
	
	public JPanel panel = new JPanel();
	JButton addButton = new JButton("Add");
	JButton deleteButton = new JButton("Delete");
	JButton searchButton = new JButton("Search");
	JButton showAllButton = new JButton("Show all data");
	JButton goBackToMainButton = new JButton("Go back to main menu");

	JLabel selectMenuLabel = new JLabel("Select a menu");
	public JTextArea errorMessage = new JTextArea(5, 20);
	
	public JFrame frame = new JFrame();
	
	Engine engine = new Engine();
	
    public MenuView () {    
    	setLayout(new FlowLayout());
	    setDefaultCloseOperation(EXIT_ON_CLOSE);
	    setSize(700,700);
	    setLocation(100, 100); 
	    selectTablelabel.setPreferredSize(new Dimension (500, 100));

	    addButton.setPreferredSize(new Dimension (80, 50));
	    deleteButton.setPreferredSize(new Dimension (80, 50));
	    searchButton.setPreferredSize(new Dimension (80, 50));
	    showAllButton.setPreferredSize(new Dimension (80, 50));
	    goBackToMainButton.setPreferredSize(new Dimension (80, 50));
	    
	    add(selectMenuLabel);
	    add(addButton);	   
	    add(deleteButton);	 
	    add(searchButton);	
	    add(showAllButton);
	    panel.add(goBackToMainButton);
	    
	    add(panel);
	    
	    setVisible(true);
	    
	    addButton.addActionListener(new ActionListener() {
	        public void actionPerformed(ActionEvent e) {
	            try {
					System.out.println("Add-button pressed!");
				} catch (Exception e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
	        }
	    });
	    
    }

	@Override
	public void actionPerformed(ActionEvent e) {
		System.out.println("action performed!");
		
	}
}
