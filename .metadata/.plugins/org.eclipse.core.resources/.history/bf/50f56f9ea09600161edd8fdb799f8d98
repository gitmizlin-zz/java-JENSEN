package jdbc_slutprojekt.view;

import java.awt.BorderLayout;
import java.awt.Component;
import java.awt.Container;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.SQLException;

import javax.swing.*;

import jdbc_slutprojekt.controll.Engine;

public class SelectActionForTableView extends JFrame {

	private JPanel panel = new JPanel();
	private JButton addButton = new JButton("Add");
	private JButton deleteButton = new JButton("Delete");
	private JButton searchButton = new JButton("Search");
	private JButton showAllButton = new JButton("Show all data");
	private JButton goBackToMainButton = new JButton("Go back to main menu");

	public JTextArea errorMessage = new JTextArea(5, 20);

	public SelectActionForTableView(String title) {
		super(title);
		
		panel.setLayout(new BoxLayout(panel, BoxLayout.Y_AXIS));
		GridBagConstraints gbc = new GridBagConstraints();
		
		setLayout(new FlowLayout());
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setSize(700, 700);
		setLocation(100, 100);

		addButton.setPreferredSize(new Dimension(200, 100));
		deleteButton.setPreferredSize(new Dimension(200, 100));
		searchButton.setPreferredSize(new Dimension(200, 100));
		showAllButton.setPreferredSize(new Dimension(200, 100));
		goBackToMainButton.setPreferredSize(new Dimension(200, 100));
		
		panel.add(addButton, gbc);
		panel.add(deleteButton, gbc);
		panel.add(searchButton, gbc);
		panel.add(showAllButton, gbc);
		panel.add(goBackToMainButton, gbc);

		add(panel);

		setVisible(true);

		addButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				try {
					System.out.println("Add-button pressed!");
				} catch (Exception e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
			}
		});

	}
}
