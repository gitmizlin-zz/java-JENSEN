package jdbc_slutprojekt.view;

import javax.swing.JPanel;
import java.awt.BorderLayout;
import java.awt.Component;
import java.awt.Container;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowEvent;
import java.sql.SQLException;

import javax.swing.*;
import javax.swing.JTextField;

import jdbc_slutprojekt.controll.Engine;

public class View extends JFrame implements ActionListener {
	public JPanel panel = new JPanel();
	JButton employeeButton = new JButton("Employee");
	JButton officeButton = new JButton("Office");
	JButton projectButton = new JButton("Project");
	JLabel selectTablelabel = new JLabel("Select a table");
	public JTextArea errorMessage = new JTextArea(5, 20);
	
	public JFrame frame = new JFrame();
	
	Engine engine = new Engine();
	
    public View () {    
    	setLayout(new FlowLayout());
	    setDefaultCloseOperation(EXIT_ON_CLOSE);
	    setSize(700,700);
	    setLocation(100, 100); 
	    selectTablelabel.setPreferredSize(new Dimension (500, 100));
	    employeeButton.setPreferredSize(new Dimension (200, 100));
	    officeButton.setPreferredSize(new Dimension (200, 100));
	    projectButton.setPreferredSize(new Dimension (200, 100));
	    
	    panel.add(selectTablelabel);
	    add(employeeButton);	   
	    add(officeButton);	 
	    add(projectButton);	
	    add(errorMessage);
	    
	    setVisible(true);
	    
	    employeeButton.addActionListener(new ActionListener() {
	        public void actionPerformed(ActionEvent e) {
	            try {
					Engine.selectTable(1);
				} catch (SQLException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
	        }
	    });
	    
	    officeButton.addActionListener(new ActionListener() {
	        public void actionPerformed(ActionEvent e) {
	            try {
					Engine.selectTable(2);
				} catch (SQLException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
	        }
	    });

	    projectButton.addActionListener(new ActionListener() {
	        public void actionPerformed(ActionEvent e) {
	            try {
					Engine.selectTable(3);
				} catch (SQLException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
	        }
	    });
	    
	    frame.dispatchEvent(new WindowEvent(frame, WindowEvent.WINDOW_CLOSING));
	    
    }

	@Override
	public void actionPerformed(ActionEvent e) {
		System.out.println("action performed!");
		
	}
}
