	public EmployeeResultView(String title, Assert assertData) throws SQLException {
		super(title);
		this.assertData = assertData;
		setLayout(new FlowLayout());
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setSize(700, 700);
		setLocation(100, 100);

		add(goBackToMainButton);
		add(result);		
		setVisible(true);

		goBackToMainButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				try {
					setVisible(false);
					Engine.main(null);
					
				} catch (Exception e1) {
					
					e1.printStackTrace();
				}
			}
		});
	}
	
	public void setResultInTextArea(String st, JTextArea ta) {		
		ta.setText(st);
