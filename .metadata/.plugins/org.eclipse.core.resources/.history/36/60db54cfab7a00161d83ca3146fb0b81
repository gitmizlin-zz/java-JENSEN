	public static void main(String[] args)  {	
		try	(Connection conn = DriverManager.getConnection(CONN_STRING,USERNAME,PASSWORD);
			PreparedStatement stm = conn.prepareStatement
					("SELECT * FROM class WHERE experience >= 30000");) {			
		// Övning 3
